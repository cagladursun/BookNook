    <div class="btns">
        <span id="heartIcon" class="heart" data-book-id="<%= locals.bookP.bookId %>"><i class="fas fa-heart"></i></span>
    </div>
     <script>
        var heartIcon = document.getElementById("heartIcon");
        var bookId = heartIcon.getAttribute("data-book-id");
       
        async function isBookInFavorites() {
            try{
                const response = await fetch(`/checkFavorite?bookId=${bookId}`);
                if (response.ok) {
                    const result = await response.json();
                    return result.isFavorite;
                } else {
                    console.error('Failed to check favorite status:', response.statusText);
                    return false;
                }
            } catch (error) {
                console.error('Error while checking favorite status:', error);
                return false;
            }
        }
    
        isBookInFavorites().then((isFavorite) => {
            if (isFavorite) {
                heartIcon.classList.add("red");
            }
        });
    
        heartIcon.addEventListener("click", function() {
            heartIcon.classList.toggle("red");
    
            fetch('/updateFavorite', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'book_id=' + encodeURIComponent(bookId),
            });
        });
    </script>



